<Window x:Class="Calculadora.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculadora"
        xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="Calculadora" Height="350" Width="250" WindowStartupLocation="CenterScreen" Background="WhiteSmoke" FontFamily="Microsoft YaHei Light">
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="FontSize" Value="17" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter x:Name="MyContentPresenter" Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="LightGray" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#B8B8B8" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <DockPanel>
            <Label Content="{Binding sVisorHistorico}" HorizontalAlignment="Right" DockPanel.Dock="Top" IsEnabled="False" />
            <TextBox Height="35" Text="{Binding sVisor, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontSize="22" TextAlignment="Right" BorderBrush="Transparent" DockPanel.Dock="Top" IsReadOnly="True" FocusVisualStyle="{x:Null}" />

            <Grid Background="#EAEAEA">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Grid.Row="0" Grid.Column="0">
                    <Image Source="../Resources/ICONE_Seta.png" RenderTransformOrigin="0.5,0.5" Margin="10">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform />
                                <RotateTransform Angle="-180" />
                                <TranslateTransform />
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </Button>
                <Button Grid.Row="0" Grid.Column="1" Content="CE" />
                <Button Grid.Row="0" Grid.Column="2" Content="C" />
                <Button Grid.Row="0" Grid.Column="3" Content="±" />
                <Button Grid.Row="0" Grid.Column="4" Content="R3" Command="{Binding CommandRegraDeTres}" />
                <Button Grid.Row="1" Grid.Column="0" Content="7" Command="{Binding CommandNumero}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" />
                <Button Grid.Row="1" Grid.Column="1" Content="8" Command="{Binding CommandNumero}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" />
                <Button Grid.Row="1" Grid.Column="2" Content="9" Command="{Binding CommandNumero}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" />
                <Button Grid.Row="1" Grid.Column="3" Content="÷" />
                <Button Grid.Row="1" Grid.Column="4" Content="√" />
                <Button Grid.Row="2" Grid.Column="0" Content="4" Command="{Binding CommandNumero}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" />
                <Button Grid.Row="2" Grid.Column="1" Content="5" Command="{Binding CommandNumero}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" />
                <Button Grid.Row="2" Grid.Column="2" Content="6" Command="{Binding CommandNumero}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" />
                <Button Grid.Row="2" Grid.Column="3" Content="×" />
                <Button Grid.Row="2" Grid.Column="4" Content="%" />
                <Button Grid.Row="3" Grid.Column="0" Content="1" Command="{Binding CommandNumero}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" />
                <Button Grid.Row="3" Grid.Column="1" Content="2" Command="{Binding CommandNumero}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" />
                <Button Grid.Row="3" Grid.Column="2" Content="3" Command="{Binding CommandNumero}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" />
                <Button Grid.Row="3" Grid.Column="3" Content="−" />
                <Button Grid.Row="3" Grid.Column="4" Content="=" Grid.RowSpan="2" />
                <Button Grid.Row="4" Grid.Column="0" Content="0" Grid.ColumnSpan="2" Command="{Binding CommandNumero}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" />
                <Button Grid.Row="4" Grid.Column="2" Content="{Binding sSeparadorDecimal}" Command="{Binding CommandNumero}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" />
                <Button Grid.Row="4" Grid.Column="3" Content="+" />
            </Grid>
        </DockPanel>
    </Grid>
</Window>